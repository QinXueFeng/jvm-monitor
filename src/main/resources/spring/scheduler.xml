<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <!--
        定时任务的配置文件
        定时任务分为 固定的(通过配置文件) 与 动态的(通过程序添加或禁用)
    -->
    <!--scheduler management center-->
    <bean id="schedulerFactory" lazy-init="true" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="autoStartup" value="${scheduler.auto.startup}"/>
        <property name="transactionManager" ref="transactionManager"/>
        <property name="dataSource" ref="dataSource"/>
        <property name="triggers">
            <list>
                <ref bean="autoCleanMonitorLogTriggerBean"/>
            </list>
        </property>
    </bean>

    <!--
        自动清理 过期时间的监控日志 定时任务配置
    -->
    <bean id="autoCleanMonitorLogTriggerBean" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="autoCleanMonitorLogJobDetailBean"/>
        <property name="cronExpression" value="${auto.clean.monitor.log.cron.expression}"/>
    </bean>

    <bean id="autoCleanMonitorLogJobDetailBean" class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
        <property name="jobClass" value="com.andaily.service.operation.job.AutoMonitorLogJob"/>
        <property name="durability" value="true"/>
    </bean>


    <!--
        dynamic scheduler factory
        动态 定时任务 配置
    -->
    <bean class="com.andaily.infrastructure.scheduler.DynamicSchedulerFactory">
        <property name="scheduler" ref="schedulerFactory"/>
    </bean>


</beans>
